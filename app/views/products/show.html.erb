<% title "Product #{@product.name}" %>

<table>
  <thead>
    <tr>
      <th><strong>Name:</strong></th>
      <th><%= @product.name %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Variants:</td>
      <td>
        <%= form_for Variant.new do |f| %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.text_field :name %>
          <%= f.submit %>
        <% end %>
      </td>
    </tr>
    <% @product.variants.each do |variant| %>
      <tr class="<%= highlight_variant(variant)%>">
        <td><%= variant.name %></td>
        <td><%= link_to('Remove', variant_path(variant), method: :delete, data: { confirm: "Do you rellay want to destroy this variant?" }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
